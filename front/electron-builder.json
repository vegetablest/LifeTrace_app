{
  "appId": "com.lifetrace.electron",
  "productName": "LifeTrace",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "public/electron.js",
    "public/preload.js",
    {
      "from": "node_modules",
      "filter": ["**/*"]
    }
  ],
  "extraMetadata": {
    "main": "public/electron.js"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "public/icon.png",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.png",
    "category": "Utility"
  }
}
